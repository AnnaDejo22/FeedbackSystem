@inject HttpClient Http
@using FeedbackSystem.Contracts.DTO
@using System.Collections.Generic

<div class="feedback-list">

    @if (feedbacks == null)
    {
        <p>Loading feedback...</p>
    }
    else if (feedbacks.Count == 0)
    {
        <p>No feedback available.</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>User Name</th>
                    <th>Feedback</th>
                    <th>Rating</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var fb in feedbacks)
                {
                    <tr>
                        <td>@fb.UserName</td>
                        <td>@fb.FeedbackText</td>
                        <td>@fb.Rating</td>
                        <td>@fb.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@code 
{
    private List<FeedbackDTO>? feedbacks;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var response = await Http.GetFromJsonAsync<ApiResponse>("api/feedback");
            feedbacks = response?.Data ?? new List<FeedbackDTO>();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error fetching feedbacks: {ex.Message}");
            feedbacks = new List<FeedbackDTO>();
        }
    }

    private class ApiResponse
    {
        public string? Message { get; set; }
        public List<FeedbackDTO>? Data { get; set; }
    }
}
